FROM golang:1.22 AS builder

WORKDIR /app

# Go-Module initialisieren und Abh채ngigkeiten herunterladen
COPY go.mod go.sum ./
RUN go mod download

# Quellcode kopieren und bauen
COPY main.go .
RUN CGO_ENABLED=0 GOOS=linux go build -o app .

FROM alpine:latest

# F체r statische Builds sicherstellen, dass wichtige Bibliotheken installiert sind
RUN apk --no-cache add ca-certificates

WORKDIR /app

# Bin채rdatei aus dem Build-Container kopieren
COPY --from=builder /app/app /app/app

# Sicherstellen, dass die Datei ausf체hrbar ist
RUN chmod +x /app/app

EXPOSE 8080
EXPOSE 9090

ENTRYPOINT ["/app/app"]

